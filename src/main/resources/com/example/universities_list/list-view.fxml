<AnchorPane prefHeight="850.0" prefWidth="720.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.universities_list.ListsController">
   <children>
      <VBox alignment="CENTER" prefHeight="850.0" prefWidth="720.0" spacing="20.0" stylesheets="@style.css" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
          <padding>
              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
          </padding>
         <children>
            <HBox id="searchTag" alignment="CENTER" maxWidth="500.0" spacing="5.0">
               <children>
                  <Label id="countyName" prefHeight="46.0" prefWidth="108.0" stylesheets="@style.css" text="Country:">
                     <font>
                        <Font size="21.0" />
                     </font>
                  </Label>
                  <TextField id="nameField" fx:id="textFieldSection" prefHeight="36.0" prefWidth="290.0" stylesheets="@style.css" />
                  <Button fx:id="searchButton" mnemonicParsing="false">
                     <graphic>
                        <ImageView fitHeight="48.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@image/search.png" />
                           </image>
                        </ImageView>
                     </graphic>
                     <effect>
                        <DropShadow />
                     </effect>
                  </Button>
               </children>
            </HBox>
            <ListView fx:id="listViewSection" maxWidth="504.0" prefHeight="409.0" prefWidth="504.0" style="-fx-background-radius: 10px;">
               <effect>
                  <DropShadow />
               </effect></ListView>
         </children>
      </VBox>
   </children>
</AnchorPane>
